<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<RelativeLayout
		android:id="@+id/main_omnibox"
		android:layout_height="48dp"
		android:layout_width="match_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_centerInParent="true"
			android:focusable="true"
			android:focusableInTouchMode="true">

			<ImageButton
				android:id="@+id/main_omnibox_search"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_marginLeft="12dp"
				android:layout_marginRight="8dp"
				android:src="@drawable/ic_earth"
				android:background="@null"/>

			<AutoCompleteTextView
				android:id="@+id/main_omnibox_inputbox"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:hint="输入内容"
				android:completionHint="最近的5条记录"
				android:textSize="14sp"
				android:selectAllOnFocus="true"
				android:completionThreshold="1"
				android:singleLine="true"
				android:imeOptions="actionGo"
				android:textCursorDrawable="@null"
				android:inputType="textNoSuggestions|textWebEditText"
				android:background="@null"
				android:popupBackground="@null"
				android:layout_weight="1.0"/>

			<ImageButton
				android:id="@+id/main_omnibox_refresh"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_marginLeft="8dp"
				android:layout_marginRight="12dp"
				android:src="@drawable/ic_refresh"
				android:background="@null"/>

		</LinearLayout>

		<ProgressBar
			android:id="@+id/main_progress_bar"
			android:layout_width="match_parent"
			android:layout_height="3dp"
			android:layout_alignParentBottom="true"
			android:indeterminate="false"
			android:indeterminateOnly="false"
			android:progressDrawable="@drawable/progress_bar_layer_list"
			style="?android:attr/progressBarStyleHorizontal"
			android:visibility="gone"/>

		<View
			android:background="?android:attr/dividerVertical"
			android:layout_height="1dp"
			android:layout_width="match_parent"
			android:layout_alignParentBottom="true"/>

	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/main_search_panel"
		android:layout_height="48dp"
		android:layout_width="match_parent"
		android:visibility="gone">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_centerInParent="true">

			<ImageButton
				android:id="@+id/main_search_cancel"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:src="@drawable/ic_stop"
				android:background="@null"
				android:layout_weight="1.0"/>

			<EditText
				android:id="@+id/main_search_box"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:hint="查找"
				android:textSize="16sp"
				android:selectAllOnFocus="true"
				android:singleLine="true"
				android:imeOptions="actionGo"
				android:textCursorDrawable="@null"
				android:inputType="textNoSuggestions|textWebEditText"
				android:background="@null"
				android:layout_weight="1.0"/>

			<ImageButton
				android:id="@+id/main_search_up"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:src="@drawable/ic_arrow_top"
				android:background="@null"
				android:layout_weight="1.0"/>

			<ImageButton
				android:id="@+id/main_search_down"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1.0"
				android:src="@drawable/ic_arrow_bottom"
				android:background="@null"/>

		</LinearLayout>

		<View
			android:background="?android:attr/dividerVertical"
			android:layout_height="1dp"
			android:layout_width="match_parent"
			android:layout_alignParentBottom="true"/>

	</RelativeLayout>

	<RelativeLayout
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:layout_weight="1.0">

		<small.indeed.fortunate.View.AgentWeb
			android:id="@+id/page"
			android:layout_height="match_parent"
			android:layout_width="match_parent"/>

		<View
			android:id="@+id/dismissView"
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:background="#E0E0E0E0"
			android:visibility="gone"/>

	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/main_omnibox_bottom"
		android:layout_height="48dp"
		android:layout_width="match_parent">

		<LinearLayout
			android:layout_height="match_parent"
			android:layout_width="match_parent">

			<ImageButton
				android:id="@+id/main_omnibox_back"
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:layout_weight="1.0"
				android:src="@drawable/ic_arrow_left"
				android:background="?android:attr/selectableItemBackgroundBorderless"/>

			<ImageButton
				android:id="@+id/main_omnibox_forward"
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:layout_weight="1.0"
				android:src="@drawable/ic_arrow_right"
				android:background="?android:attr/selectableItemBackgroundBorderless"/>

			<ImageButton
				android:id="@+id/main_omnibox_home"
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:layout_weight="1.0"
				android:src="@drawable/ic_home"
				android:background="?android:attr/selectableItemBackgroundBorderless"/>

			<ImageButton
				android:id="@+id/main_omnibox_multi"
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:layout_weight="1.0"
				android:src="@drawable/ic_muti_window"
				android:background="?android:attr/selectableItemBackgroundBorderless"/>

			<ImageButton
				android:id="@+id/main_omnibox_menu"
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:layout_weight="1.0"
				android:src="@drawable/ic_menu"
				android:background="?android:attr/selectableItemBackgroundBorderless"/>

		</LinearLayout>

		<View
			android:background="?android:attr/dividerVertical"
			android:layout_height="1dp"
			android:layout_width="match_parent"/>

	</RelativeLayout>

</LinearLayout>

