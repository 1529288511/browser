<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="50dp">
	
<LinearLayout
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:layout_weight="1.0"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<small.indeed.fortunate.view.EditTextExt
			android:id="@+id/et_key_finder"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1.0"
			android:layout_marginStart="12dp"
			android:layout_marginEnd="8dp"
			android:hint="页内查找"
			android:textSize="14sp"
			android:singleLine="true"
			android:selectAllOnFocus="true"
			android:imeOptions="actionDone"
			android:textCursorDrawable="@null"
			android:background="@null"/>

		<TextView
			android:id="@+id/tv_matches_number_finder"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:gravity="center"
			android:textSize="13sp"
			android:text="0/0"/>

	</LinearLayout>

	<LinearLayout
		android:layout_weight="1.0"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		
		<ImageButton
			android:id="@+id/imb_previous_finder"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="1.0"
			android:scaleType="centerInside"
			android:src="@drawable/ic_arrow_previous"
			android:background="?attr/selectableItemBackground"/>
		
		<ImageButton
			android:id="@+id/imb_next_finder"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="1.0"
			android:scaleType="centerInside"
			android:src="@drawable/ic_arrow_next"
			android:background="?attr/selectableItemBackground"/>
		
		<ImageButton
			android:id="@+id/imb_close_finder"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="1.0"
			android:scaleType="centerInside"
			android:src="@drawable/ic_close"
			android:background="?attr/selectableItemBackground"/>

	</LinearLayout>

</LinearLayout>
	<View
		android:background="?android:attr/dividerVertical"
		android:layout_height="1dp"
		android:layout_width="match_parent"/>
</RelativeLayout>
